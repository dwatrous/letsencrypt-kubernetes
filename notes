apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  annotations:
  name: letsencrypt
rules:
- apiGroups:
  - '*'
  resources:
  - namespaces
  verbs:
  - 'get'
  - 'list'
- apiGroups:
  - '*'
  resources:
  - secrets
  verbs:
  - '*'


apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: letsencrypt
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: letsencrypt
subjects:
- kind: ServiceAccount
  name: letsencrypt
  namespace: kube-system


apiVersion: v1
kind: ServiceAccount
metadata:
  name: letsencrypt
  namespace: kube-system
secrets:
- name: letsencrypt-token-vwft4
